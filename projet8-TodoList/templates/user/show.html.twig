{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <div class="btn-group" role="group" aria-label="Basic example">
        <div type="" class="btn btn-primary">ID : {{ user.id }}</div>
        <div type="" class="btn btn-primary">{{ user.username }}</div>
        <div type="" class="btn btn-primary">{{ user.roles ? user.roles|json_encode : '' }}</div>
    </div>

    <div class="toast p-2" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">{{ user.email }}</strong>
        </div>

    </div>


    <a class="btn btn-success" href="{{ path('app_user_index') }}">Liste des utilisateurs</a>

    <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier l'utilisateur</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
